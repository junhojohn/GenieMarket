<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gradStop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="0dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:background="@color/gradStop"
                android:text="뒤로" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_nextStep"
                android:layout_toRightOf="@+id/btn_back"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:text="상품등록" />

            <Button
                android:id="@+id/btn_nextStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"

                android:textColor="@color/white"
                android:background="@color/gradStop"
                android:text="다음" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/registerlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvProductNameTitle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/title_product_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
            <net.clipcodes.myapplication.ui.widgets.ClearEditText
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:hint="상품명을 입력해주세요."
                app:backgroundTint="@color/black"
                android:shadowColor="@color/black"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvPriceTagTitle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/title_product_price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
            <net.clipcodes.myapplication.ui.widgets.ClearEditText
                android:id="@+id/tvPriceTag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:hint="가격을 입력해주세요."
                app:backgroundTint="@color/black"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvPriceUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="원"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSellingUnitTitle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/title_product_selling_unit"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                numberpicker:min="1"
                numberpicker:max="1000"
                numberpicker:value="-5"
                numberpicker:unit="1"
                numberpicker:focusable="false"
                numberpicker:custom_layout="@layout/item_number_picker"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSellerNameTitle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/title_seller_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvSellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="JFamily"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDescriptionTitle"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/title_product_desc"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
            <EditText
                android:id="@+id/tvDescription"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="10"
                android:maxLines="100"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="top"
                android:hint="상품 설명을 입력해주세요."
                android:background="@drawable/border"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
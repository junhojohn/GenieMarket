<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_gradient"
    android:layout_gravity="center"
    android:id="@+id/login_linearlayout"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center">
        <ImageView
            android:id="@+id/splash"
            android:layout_width="268dp"
            android:layout_height="121dp"
            android:background="@drawable/splash_title" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center">
        <EditText
            android:id="@+id/edt_phone_num"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:backgroundTint="@color/white"
            android:hint="휴대폰번호를 입력해주세요."
            android:textColorHint="@color/white"/>
        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:hint="비밀번호를 입력해주세요."/>
        <Button
            android:id="@+id/btnLogin"
            android:text="로그인"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_login_gradient"
            android:shadowColor="#A81F03"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="비밀번호/아이디를 잊어버리셨나요?"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/btnKakaoAccountLogin"
            android:text="카카오계정으로 로그인"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#3C1E1E"
            android:textSize="18dp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@color/kakaoYellow"
            android:drawableLeft="@drawable/ic_kakao_icon" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="left"
                android:text="처음오셨나요?"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="가입하기"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
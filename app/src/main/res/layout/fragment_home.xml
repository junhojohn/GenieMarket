<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:theme="@style/HomeTheme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/lightlightGrey"
    android:layout_height="match_parent">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="?attr/actionBarSize">
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/best_fragment"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_best_product"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:id="@+id/text_best"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:id="@+id/bestProductView"
                android:background="@color/gradStop"
                android:layout_height="2dp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/cheap_fragment"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_cheap_product"
                android:id="@+id/text_cheap"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_gravity="bottom"
                android:background="@color/gradStop"
                android:id="@+id/cheapProductView"
                android:layout_height="2dp"/>
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <!--THIS IS CONTAINER-->
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/containerpage"
        android:layout_height="match_parent"/>

</LinearLayout>